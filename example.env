# oDoc Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# DFX Configuration (Auto-generated during deployment)
# =============================================================================
DFX_VERSION='0.29.2'
DFX_NETWORK='local'

# Canister IDs (Generated automatically by dfx deploy)
CANISTER_ID_INTERNET_IDENTITY='rdmx6-jaaaa-aaaaa-aaadq-cai'
VITE_INTERNET_IDENTITY=rdmx6-jaaaa-aaaaa-aaadq-cai
VITE_BACKEND_CANISTER_ID=
VITE_FRONTEND_CANISTER_ID=

# =============================================================================
# Vite Environment
# =============================================================================
VITE_DFX_NETWORK=local
VITE_DFX_PORT=4943
VITE_IC_HOST=http://localhost:4943

# Internet Identity v2 configuration
VITE_II_ALTERNATIVE_ORIGINS=https://identity.ic0.app
VITE_II_DERIVATION_ORIGIN=http://localhost:4943
VITE_USE_ID_AI_LOCAL=false

# =============================================================================
# Development Configuration
# =============================================================================
VITE_TEST_ENV=backend
SECRET=your_secret_key_here
ODOC_CEO_ID=

# Development Tools
AIDER_COMMAND=aider --model sonnet --anthropic-api-key YOUR_KEY
VITE_PUBLIC_BASE_PATH=

# =============================================================================
# AI API Keys (Choose one or more)
# =============================================================================
# Anthropic Claude (Recommended)
VITE_ANTHROPIC_API_KEY=sk-ant-api03-your_key_here
VITE_ANTHROPIC_SECRET_KEY=sk-ant-admin01-your_secret_here

# DeepSeek
VITE_DEEPSEEK_API_KEY=sk-your_deepseek_key_here

# Groq
VITE_GROQ_API_KEY=gsk_your_groq_key_here

# Hugging Face
VITE_HUGINGFACE_KEY=hf_your_token_here

# DashScope
VITE_DASHSCOPE_API_KEY=your_dashscope_api_key_here

# RunPod
VITE_RUNPOD_API_KEY=rpa_your_runpod_key_here

# =============================================================================
# Google Services (Optional)
# =============================================================================
VITE_GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com
VITE_GOOGLE_API_KEY=your_google_api_key
VITE_GOOGLE_CLIENT_SECRET=your_google_client_secret
VITE_GMAIL_AUTH_CLIENT_ID=your_gmail_client_id

# =============================================================================
# Email Services (Optional - choose one)
# =============================================================================
# EmailJS
VITE_REACT_APP_EMAILJS_SERVICE_ID=service_your_id
VITE_REACT_APP_EMAILJS_USER_ID=your_user_id
VITE_REACT_APP_EMAILJS_TEMPLATE_ID=template_your_id

# Mailgun
VITE_MAILGUN_KEY=pubkey-your_public_key
VITE_MAINGUN_SECRET_KEY=your_secret_key

# Mailjet
VITE_MAILJET_KEY=your_mailjet_key
VITE_MAILJET_SECRET_KEY=your_mailjet_secret

# Brevo (formerly Sendinblue)
VITE_BREVO_SECRET_KEY=xsmtpsib-your_secret_key

# MailTrap
VITE_MAIL_TRAP=your_mailtrap_token

# =============================================================================
# Communication (Optional)
# =============================================================================
# Telegram Bot
VITE_PUBLIC_TELEGRAM_BOT_TOKEN=your_bot_token:your_bot_hash

# =============================================================================
# Monitoring (Optional)
# =============================================================================
# Sentry Error Monitoring
VITE_SENTRY_DNS=https://your_sentry_dsn@sentry.io/project_id

# =============================================================================
# Testing (Optional)
# =============================================================================
ZEROSTEP_TOKEN=0step:your_zerostep_token
VITE_ZEROSTEP_TOKEN=0step:your_zerostep_token

# =============================================================================
# Setup Instructions
# =============================================================================
# 1. Copy this file: cp example.env .env
# 2. Run deployment: make deploy-all
#    - This auto-populates canister IDs
# 3. Add your API keys for services you want to use
#
# Required for basic functionality:
# - DFX configuration (auto-generated)
# - At least one AI API key (optional, for AI features)
#
# All other services are optional and can be left empty
